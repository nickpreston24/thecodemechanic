<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <ToolCommandName>cm</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <IsPackable>True</IsPackable>
        <PackAsTool>True</PackAsTool>

    </PropertyGroup>

    <ItemGroup>
        <Watch Include="**/*.cs*"/>
        <Watch Include="img/*"/>
        <Watch Include="js/*.js"/>
        <Watch Include=".env"/>
        <Watch Include="css/site.css"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CodeMechanic.Bash" Version="1.0.1"/>
        <PackageReference Include="CodeMechanic.Diagnostics" Version="1.0.4"/>
        <PackageReference Include="CodeMechanic.Embeds" Version="1.0.3"/>
        <PackageReference Include="CodeMechanic.FileSystem" Version="2.0.5"/>
        <PackageReference Include="CodeMechanic.Reflection" Version="1.0.5"/>
        <PackageReference Include="CodeMechanic.RegularExpressions" Version="1.0.5"/>
        <PackageReference Include="CodeMechanic.Shargs" Version="1.0.4"/>
        <PackageReference Include="CodeMechanic.Types" Version="1.0.11"/>
        <PackageReference Include="Htmx" Version="1.8.0"/>
        <PackageReference Include="Htmx.TagHelpers" Version="1.8.0"/>
        <PackageReference Include="Hydro" Version="1.1.0"/>
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3"/>
        <!-- <PackageReference Include="Dapper" Version="2.1.35" /> -->
    </ItemGroup>

</Project>
